{
  "extends": "@istanbuljs/nyc-config-typescript",
  "require": [
    "ts-node/register",
    "source-map-support/register"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test/*",
    "out/test/*",
    "src/NABfunctions.ts",
    "src/Telemetry.ts",
    "src/XlfHighlighter.ts"
  ],
  "reporter": [
    "text-summary",
    "lcov"
  ],
  "check-coverage": true,
  "report-dir": ".coverage",
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}
