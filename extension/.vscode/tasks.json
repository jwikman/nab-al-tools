// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$ts-webpack-watch",
                "$tslint-webpack-watch"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "test-watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        },
        {
            "label": "Package Preview",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\Create-PreviewVSIX.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Package Live",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\Create-LiveVSIX.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Publish on Marketplace",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\Publish-ToMarketplace.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Check Circular Dependencies",
            "type": "shell",
            "windows":{
                "command": "node",
                "args":[
                    "${workspaceFolder}\\node_modules\\madge\\bin\\cli.js",
                    "--warning",
                    "--circular",
                    "--extensions=ts",
                    ".\\src\\extension.ts"
                ],
            },
            "linux":{
                "command": "node",
                "args":[
                    "${workspaceFolder}/node_modules/madge/bin/cli.js",
                    "--warning",
                    "--circular",
                    "--extensions=ts",
                    "./src/extension.ts"
                ],
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}