{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$ts-webpack-watch",
                "$tslint-webpack-watch"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "npm: watch",
            "detail": "webpack --watch"
        },
        {
            "detail": "Use webpack in Development mode",
            "type": "npm",
            "script": "webpack-dev",
            "problemMatcher": [
                "$ts-webpack-watch",
                "$tslint-webpack-watch"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build",
            "label": "npm: webpack-dev"
        },
        {
            "detail": "Use webpack in Production mode",
            "type": "npm",
            "script": "webpack-prod",
            "problemMatcher": [
                "$ts-webpack-watch",
                "$tslint-webpack-watch"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build",
            "label": "npm: webpack-prod"
        },
        {
            "type": "npm",
            "script": "test-watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": "build"
        },
        {
            "label": "Package Preview",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\Create-PreviewVSIX.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Package Live",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\Create-LiveVSIX.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Release to Marketplace",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\Release-ToMarketplace.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Pre-Release to Marketplace",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\dev-tools\\PowerShell\\PreRelease-ToMarketplace.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Check Circular Dependencies",
            "type": "shell",
            "windows": {
                "command": "node",
                "args": [
                    "${workspaceFolder}\\node_modules\\madge\\bin\\cli.js",
                    "--warning",
                    "--circular",
                    "--extensions=ts",
                    ".\\src\\extension.ts"
                ]
            },
            "linux": {
                "command": "node",
                "args": [
                    "${workspaceFolder}/node_modules/madge/bin/cli.js",
                    "--warning",
                    "--circular",
                    "--extensions=ts",
                    "./src/extension.ts"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run CLI tests",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\.github\\workflows\\scripts\\cli-test.ps1",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
		{
			"label": "Stop Watch",
			"command": "echo ${input:terminate}",
			"type": "shell",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false,
				"close": true
			}
		},
		{
			"label": "Clean Build and Restart Watch",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Stop Watch",
				"Clean Folders out and dist",
				"npm: test-watch"
			],
			"problemMatcher": []
		},
		{
			"label": "Clean Folders out and dist",
			"type": "shell",
			"command": "Remove-Item -Path '${workspaceFolder}/out' -Recurse -Force -ErrorAction SilentlyContinue;Remove-Item -Path '${workspaceFolder}/dist' -Recurse -Force -ErrorAction SilentlyContinue",
			"problemMatcher": [],
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false,
				"close": true
			}
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "npm: test-watch"
		}
	]}