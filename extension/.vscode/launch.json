// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "name": "TestApp",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-app/TestApp.code-workspace",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--skip-welcome",
                "--skip-release-notes",
                "--disable-workspace-trust",
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: webpack-dev",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Automatic Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "NAB_DISABLE_TELEMETRY": "true" // Set to null to enable testing with telemetry
            },
            "args": [
                "${workspaceFolder}/../test-app/TestApp.code-workspace",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
                "--disable-extensions",
                "--skip-welcome",
                "--skip-release-notes",
                "--disable-workspace-trust",
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "preLaunchTask": "npm: test-watch",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "All Automatic Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "GITHUB_ACTION": "Truthy"
            },
            "args": [
                "${workspaceFolder}/../test-app/TestApp.code-workspace",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
                "--disable-extensions",
                "--skip-welcome",
                "--skip-release-notes",
                "--disable-workspace-trust",
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "preLaunchTask": "npm: test-watch",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Tests any workspace",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: webpack-dev",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}